<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC000000">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_height="640"
        app:scale_base_width="360"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/infotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Which Version to play ?"
            android:gravity="center"
            android:textColor="#FF5D4D"
            android:fontFamily="@font/notosanskrmedium"
            app:scale_width="360"
            app:scale_height="40"
            app:scale_textsize="20"
            app:scale_top="240"
            />
        <TextView
            android:id="@+id/howtodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="게임 버전을 선택해주세요"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="@font/notosanskrmedium"
            app:scale_width="360"
            app:scale_height="40"
            app:scale_textsize="18"
            app:scale_top="280"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_height="15"
            app:scale_left="175"
            app:scale_top="340"
            app:scale_width="15"
            app:srcCompat="@drawable/ic_arrow" />

        <Button
        android:id="@+id/option01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_btn_bg"
        android:text="Version 1 "
        android:fontFamily="@font/notosanskrregular"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:scale_textsize="16"
        app:scale_width="134"
        app:scale_height="44"
        app:scale_top="380"
        app:scale_left="25"/>

        <Button
            android:id="@+id/option02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_btn_bg"
            android:text="Version 2"
            android:fontFamily="@font/notosanskrregular"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:scale_textsize="16"
            app:scale_width="134"
            app:scale_height="44"
            app:scale_top="380"
            app:scale_left="200"/>


    </com.ssomai.android.scalablelayout.ScalableLayout>
</FrameLayout>